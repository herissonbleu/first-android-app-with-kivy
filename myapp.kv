#:kivy 2.0.0
ScreenManager:
    LoginScreen:
    ScreenOne:
    ScreenTwo:
    ScreenThree:
    ScreenFour:

<LoginScreen>:
    name: "login_screen"
    MDCard:
        size_hint: None, None
        size: 300,400
        pos_hint: {"center_x":0.5, "center_y":0.5}
        elevation: 10
        padding: 25
        spacing: 25
        orientation: 'vertical'

        MDLabel:
            id: welcome_label
            text: "WELCOME"
            font_size: 40
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 15

        MDTextFieldRound:
            id: user
            hint_text: "username"
            text:
            icon_right: "account"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {"center_x": 0.5}

        MDTextFieldRound:
            id: password
            hint_text: "password"
            icon_right: "eye-off"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {"center_x": 0.5}
            password: True

        MDRoundFlatButton:
            text: "LOG IN"
            font_size: 12
            pos_hint: {"center_x": 0.5}
            on_press:
                root.logger()
                root.clocked_switch()

        MDRoundFlatButton:
            text: "CLEAR"
            font_size: 12
            pos_hint: {"center_x": 0.5} 
            on_press: root.clear()
                     

        Widget:
            size_hint_y: None
            height: 10
            

<ScreenOne>:
    name: "screen_one"
    ScrollView:
        adaptive_size: True
        do_scroll_x: False
        do_scroll_y: True
        pos_hint: {'center_x': .5}
        size_hint_x: None
        width: card.width
        
        MDCard:
            height: self.minimum_height
            id: card
            size_hint: None, None
            size: 300,400
            pos_hint: {"center_x":0.5, "center_y":0.5}
            elevation: 10
            padding: 25
            spacing: 25
            orientation: 'vertical'
           
            MDLabel:
                id: welcome_label
                text: "Give the variables"
                font_size: 40
                halign: 'center'
                size_hint_y: None
                height: self.texture_size[1]
                padding_y: 15
                
            MDTextField:
                input_filter: "int"
                id: elementone
                hint_text: "element1"
                helper_text: "text to help"
                helper_text_mode: "persistent"
                icon_left: "head"

            MDTextField:
                input_filter: "int"
                id: elementtwo
                hint_text: "element2"
                helper_text: "text to help"
                helper_text_mode: "persistent"
                icon_left: "calendar"

            MDTextField:
                input_filter: "int"
                id: elementthree
                hint_text: "element3"
                helper_text: "text to help"
                helper_text_mode: "persistent"
                icon_left: "heart"

            MDTextField:
                input_filter: "int"
                id: elementfour
                hint_text: "element4"
                helper_text: "text to help"
                helper_text_mode: "persistent"
                icon_left: "lungs"

            MDTextField:
                input_filter: "int"
                id: elementfive
                hint_text: "element5"
                helper_text: "text to help"
                helper_text_mode: "persistent"
                icon_left: "brain"

            MDTextField:
                input_filter: "int"
                id: elementsix
                hint_text: "element6"
                helper_text: "text to help"
                helper_text_mode: "persistent"
                icon_left: "air"
                
            MDRoundFlatButton:
                text: "Next"
                size_hint_y: None
                height: '48dp'
                font_size: 12
                pos_hint: {"center_x": 0.5} 
                on_press:
                    root.data_storage.put("mydata", elementone=elementone.text, elementtwo=elementtwo.text,elementthree=elementthree.text,elementfour=elementfour.text, elementfive=elementfive.text, elementsix=elementsix.text,elementseven='')
                    root.data_storage["mydata"] = root.data_storage["mydata"]
                    root.manager.transition.direction = "left"
                    root.manager.transition.duration = 1
                    root.manager.current = "screen_two"
                    root.enabled = False

            Widget:
                size_hint_y: None
                height: 10

<ScreenTwo>:
    name: "screen_two"

    MDCard:
        size_hint: None, None
        size: 300,400
        pos_hint: {"center_x":0.5, "center_y":0.5}
        elevation: 10
        padding: 25
        spacing: 25
        orientation: 'vertical'


        MDLabel:
            id: welcome_label
            text: "Choose the item"
            font_size: 40
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 15

        ScrollView:
            MDList:
                id: elementseven

        MDRoundFlatButton:
            text: "Next"
            size_hint_y: None
            height: '48dp'
            font_size: 12
            pos_hint: {"center_x": 0.5}
            on_press:
                root.manager.transition.direction = "left"
                root.manager.transition.duration = 1
                root.manager.current = "screen_three"
                root.enabled = False

        Widget:
            size_hint_y: None
            height: 10

<ScreenThree>:
    name: "screen_three"
    on_enter:
        spinner.active = True
        root.enabled = False
        root.start_background_task()
    MDCard:
        size_hint: None, None
        size: 300,400
        pos_hint: {"center_x":0.5, "center_y":0.5}
        elevation: 10
        padding: 25
        spacing: 25
        orientation: 'vertical'

        MDSpinner:
            id: spinner
            size_hint: None, None
            size: dp(48), dp(48)
            pos_hint: {"center_x":0.5, "center_y":0.3}
            active: False
            color: "deepskyblue"

        MDLabel:
            id: welcome_label
            text: "Probability for the outcome "
            font_size: 40
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 15


        MDRoundFlatButton:
            id: go_back
            text: "Continue"
            font_size: 12
            pos_hint: {"center_x": 0.5}
            on_press:
                root.manager.transition.direction = "left"
                root.manager.transition.duration = 1
                root.manager.current = "screen_four"
                root.enabled = False
                     

        Widget:
            size_hint_y: None
            height: 10

<ScreenFour>:
    name: "screen_four"
    on_enter:
        go_beginning.state = 'normal'
        welcome_label.state = 'normal'
        root.enabled = False
    MDCard:
        size_hint: None, None
        size: 300,400
        pos_hint: {"center_x":0.5, "center_y":0.5}
        elevation: 10
        padding: 25
        spacing: 25
        orientation: 'vertical'

        MDLabel:
            id: welcome_label
            text: "Choose"
            font_size: 40
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 15

        MDRoundFlatButton:
            id: go_beginning
            text: "Go Back to Start"
            font_size: 12
            pos_hint: {"center_x": 0.5}
            on_press: 
                root.manager.transition.direction = "left"
                root.manager.transition.duration = 1
                root.manager.current = "screen_one"
                root.enabled = False

        MDRoundFlatButton:
            id: exit_button
            text: "Exit"
            font_size: 12
            pos_hint: {"center_x":0.5}
            on_press:
                app.stop()
                     
        Widget:
            size_hint_y: None
            height: 10